<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCanActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <com.example.logger.customfonts.TextView_break_bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Insertar nuevo formulario canino"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Correo electronico">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/caninos_email"
                    android:editable="false"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre del supervisor:"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/spSupervisor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:entries="@array/Supervisor" />



            <EditText
                android:id="@+id/etDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spRuta"
                android:ems="10"
                android:focusable="false"
                android:hint="Seleccione ruta:"
                />

            <Spinner
                android:id="@+id/spRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/Ruta" />
            <EditText
                android:id="@+id/etDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spInstitucion"
                android:ems="10"
                android:focusable="false"
                android:hint="Seleccione la institucion educativa:"
                />



            <Spinner
                android:id="@+id/spInstitucion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/Institucion" />


            <EditText
                android:id="@+id/etDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spInstitucion"
                android:ems="10"
                android:focusable="false"
                android:hint="Seleccione la sede:"
                />

            <Spinner
                android:id="@+id/spSede"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/Sede" />

            <EditText
                android:id="@+id/etDescription4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spSede"
                android:ems="10"
                android:focusable="false"
                android:hint="Seleccione el orden:"
                />

            <Spinner
                android:id="@+id/spOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/Orden" />




            <EditText
                android:id="@+id/etDescription5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spOrden"
                android:ems="10"
                android:focusable="false"
                android:hint="Grupo:"
                />

            <Spinner
                android:id="@+id/spGrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/Grupo" />


            <com.example.logger.customfonts.TextView_break_bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="PRESENTACION PERSONAL"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDescription6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/spOrden"
                android:ems="10"
                android:focusable="false"
                android:hint="Porta adecuadamente el uniforme?"
                />

            <Spinner
                android:id="@+id/spInvierno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />

                <EditText
                    android:id="@+id/editText2"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="opcional"
                    android:inputType="textMultiLine"
                    android:maxLines="4" />


            <com.example.logger.customfonts.TextView_break_bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="DOTACION"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDescription8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Tiene dotacion de invierno?"
                />

            <Spinner
                android:id="@+id/spOtro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />

            <EditText
                    android:id="@+id/comentariojuguete"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="opcional"
                    android:inputType="textMultiLine"
                    android:maxLines="4" />

            <EditText
                android:id="@+id/etDescription9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:focusable="false"
                android:hint="Tiene chaleco identificador?"
                />

            <Spinner
                android:id="@+id/spChaleco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />

            <EditText
                    android:id="@+id/comentariochaleco"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="opcional"
                    android:inputType="textMultiLine"
                    android:maxLines="4" />


            <com.example.logger.customfonts.TextView_break_bold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="DOCUMENTACION"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Porta la cedula de ciudadania?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

        <Spinner
            android:id="@+id/spCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:entries="@array/SiNo" />



                <EditText
                    android:id="@+id/comentariCcedula"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="opcional"
                    android:inputType="textMultiLine"
                    android:maxLines="4" />
            <TextView
                android:id="@+id/txtCarnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Porta el carnet de la empresa?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spCarnet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />



            <EditText
                android:id="@+id/comentariocarnet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:hint="opcional"
                android:inputType="textMultiLine"
                android:maxLines="4" />

            <TextView
                android:id="@+id/txtARL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Porta el carnet de la ARL?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/sparl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />



            <EditText
                android:id="@+id/comentarioARL"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:hint="opcional"
                android:inputType="textMultiLine"
                android:maxLines="4" />
            <TextView
                android:id="@+id/txtFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiene folio de vida al dia?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />

            <EditText
                android:id="@+id/comentarioFolio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:hint="opcional"
                android:inputType="textMultiLine"
                android:maxLines="4" />
            <TextView
                android:id="@+id/txtVacunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiene el carnet de vacunas al dia?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spVacunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />



            <EditText
                android:id="@+id/comentarioVacuna"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:hint="opcional"
                android:inputType="textMultiLine"
                android:maxLines="4" />
            <TextView
                android:id="@+id/txtPolicia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="El ejemplar tiene el certificado de policia?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spPolicia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />



            <EditText
                android:id="@+id/comentarioPolice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left"
                android:hint="opcional"
                android:inputType="textMultiLine"
                android:maxLines="4" />
            <TextView
                android:id="@+id/txtPoliza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tiene poliza civil?"
                android:layout_marginBottom="10dp"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spPoliza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:entries="@array/SiNo" />




            <Button
                android:id="@+id/AgregarFormulario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_rounded"
                android:text="Agregar"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>